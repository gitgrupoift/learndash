@using LearnDash.Controllers
@model List<Notification>
@{
	string message = "There's no important to say...";
	if (@Model != null)
	{
		if (@Model.Count != 0)
		{
			foreach (var notification in @Model)
			{

				switch (notification.Type)
				{
					case NotificationType.FailAdd:
						message = "Fail at adding";
						break;
					case NotificationType.FailDeleted:
						message = "Fail at deleting";
						break;
					case NotificationType.FailEdited:
						message = "Fail at editing";
						break;
					case NotificationType.FailedToLoadFlow:
						message = "Fail at loading flow";
						break;
					case NotificationType.SuccesfullyAdd:
						message = "Succesfylly add";
						break;
					case NotificationType.SuccesfullyDeleted:
						message = "Succesfully deleted";
						break;
					case NotificationType.SuccesfullyEdited:
						message = "Succesfully edited";
						break;
					default:
						message = "There is nothing important to say";
						break;
				}   
		
	 
		
	<div id="customContainer">
		@String.Format("{0:HH:mm}", notification.NotificationTime), @message</div>

			}
		}
		else
		{
	<div id="customContainer">
		@message</div> 
		}
	}
	else
	{
	<div id="customContainer">
		@message</div>
	}
	

}
<script type="text/javascript">
	function generate(type)
	{

		var n = $('div#customContainer').noty({
			text: type,
			type: type,
			dismissQueue: true,
			layout: 'topCenter',
			theme: 'default'
		});

		console.log('html: ' + n.options.id);
	}

	function generateAll()
	{
		generate('alert');
		generate('information');
		generate('error');
		generate('warning');
		generate('notification');
		generate('success');
	}

	$(document).ready(function ()
	{
		generateAll();
	});

</script>
